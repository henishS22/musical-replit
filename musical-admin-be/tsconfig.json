{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"moduleResolution": "node",
		"noImplicitAny": false,
		"outDir": "build",
		"baseUrl": "src",
		"removeComments": true,
		"skipLibCheck": true,
		"types": [],
		"typeRoots": [
			"src/@types",
			"node_modules/@types"
		],
		"paths": {
			"@schemas/*": [
				"schemas/*"
			],
			"@models/*": [
				"models/*"
			],
			"@config": [
				"core/config"
			],
			"@core/*": [
				"core/*"
			],
			"@mail/*": [
				"mails/*"
			],
			"@helpers/*": [
				"helpers/*"
			],
			"@modules/*": [
				"modules/*"
			],
			"@middlewares/*": [
				"middlewares/*"
			],
			"@datasources/*": [
				"data-sources/*"
			],
			"@abis/*": [
				"../abis/*"
			]
		},
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.js",
		"types.d.ts"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}